<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ForMenApp.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid RowDefinitions="auto,auto,auto,auto,auto,auto,auto,auto,auto"
                  ColumnDefinitions="*,*,*,*"
                  Padding="25,0,25,0">

                <Label Text="4M&#10; For men"
                       Grid.Row="0"
                       Grid.Column="0"
                       Grid.ColumnSpan="4"
                       Margin="0,20,0,20"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="Black"
                       VerticalOptions="Start"
                       HorizontalTextAlignment="Center"
                       HorizontalOptions="Center"/>

                <Label Text="REGISTRA TUS DATOS PARA CONTINUAR"
                       Grid.Row="1"
                       Grid.Column="0"
                       Grid.ColumnSpan="4"
                       FontSize="13"
                       FontAttributes="Italic"
                       TextColor="Black"
                       HorizontalOptions="Start"
                       HorizontalTextAlignment="Center"/>


                <Grid Grid.Column="0"
                      Grid.Row="2"
                      Grid.ColumnSpan="2"
                      Margin="0,15,0,0"
                      RowDefinitions="Auto">

                    <Label Text="Nombre"
                           Grid.Row="0"
                           Margin="10,0,10,0"
                           TextColor="Black"
                           FontSize="12"
                           VerticalOptions="Start"/>

                    <Frame Grid.Row="0"
                           Margin="0,5,0,5"
                           BorderColor="Black"
                           BackgroundColor="Transparent"
                           TranslationY="-8"
                           VerticalOptions="End"
                           HasShadow="False"
                           HeightRequest="33"
                           CornerRadius="0">

                        <Entry Placeholder=""
                               FontAttributes="Italic"
                               FontSize="12"
                               CharacterSpacing="2"
                               VerticalOptions="End"
                               TranslationY="15"
                               />

                    </Frame>
                </Grid>

                <Grid Grid.Column="2"
                      Grid.Row="2"
                      Grid.ColumnSpan="2"
                      Margin="0,15,0,0"
                      RowDefinitions="Auto">

                    <Label Text="Apellido"
                           Grid.Row="0"
                           Margin="10,0,10,0"
                           TextColor="Black"
                           FontSize="12"
                           VerticalOptions="Start"/>

                    <Frame Grid.Row="0"
                           Margin="0,5,0,5"
                           BorderColor="Black"
                           BackgroundColor="Transparent"
                           TranslationY="-8"
                           VerticalOptions="End"
                           HasShadow="False"
                           HeightRequest="33"
                           CornerRadius="0">

                        <Entry Placeholder=""
                               FontAttributes="Italic"
                               FontSize="12"
                               CharacterSpacing="2"
                               VerticalOptions="End"
                               TranslationY="15"
                               />

                    </Frame>
                </Grid>

                <Grid Grid.Column="0"
                      Grid.Row="3"
                      Grid.ColumnSpan="4"
                      RowDefinitions="Auto">

                    <Label Text="Email"
                           Grid.Row="0"
                           Margin="10,0,10,0"
                           TextColor="Black"
                           FontSize="12"
                           VerticalOptions="Start"/>

                    <Frame Grid.Row="0"
                           Margin="0,5,0,5"
                           BorderColor="Black"
                           BackgroundColor="Transparent"
                           TranslationY="-8"
                           VerticalOptions="End"
                           HasShadow="False"
                           HeightRequest="33"
                           CornerRadius="0">

                        <Entry Placeholder=" example@example.com"
                               FontAttributes="Italic"
                               FontSize="12"
                               CharacterSpacing="2"
                               VerticalOptions="End"
                               TranslationY="15"/>

                    </Frame>
                </Grid>

                <Grid Grid.Column="0"
                      Grid.Row="4"
                      Grid.ColumnSpan="4"
                      RowDefinitions="Auto">

                    <Label Text="Password"
                           Grid.Row="0"
                           Margin="10,0,10,0"
                           TextColor="Black"
                           FontSize="12"
                           VerticalOptions="Start"
                           BackgroundColor="Transparent"/>

                    <Frame Grid.Row="0"
                           Margin="0,5,0,5"
                           BorderColor="Black"
                           BackgroundColor="Transparent"
                           TranslationY="-8"
                           VerticalOptions="End"
                           HasShadow="False"
                           HeightRequest="33"
                           CornerRadius="0">

                        <Entry Placeholder=" ********"
                               FontAttributes="Italic"
                               FontSize="12"
                               CharacterSpacing="2"
                               VerticalOptions="End"
                               TranslationY="15"/>

                    </Frame>
                </Grid>

                <Grid Grid.Column="0"
                      Grid.Row="5"
                      Grid.ColumnSpan="4"
                      RowDefinitions="Auto">

                    <Label Text="Confirmar Password"
                           Grid.Row="0"
                           Margin="10,0,10,0"
                           TextColor="Black"
                           FontSize="12"
                           VerticalOptions="Start"
                           BackgroundColor="Transparent"/>

                    <Frame Grid.Row="0"
                           Margin="0,5,0,5"
                           BorderColor="Black"
                           BackgroundColor="Transparent"
                           TranslationY="-8"
                           VerticalOptions="End"
                           HasShadow="False"
                           HeightRequest="33"
                           CornerRadius="0">

                        <Entry Placeholder=" ********"
                               FontAttributes="Italic"
                               FontSize="12"
                               CharacterSpacing="2"
                               VerticalOptions="End"
                               TranslationY="15"/>

                    </Frame>
                </Grid>

                <Button Text="Registrar"
                        TextColor="White"
                        Margin="0,5,50,5"
                        Grid.Row="6"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        BackgroundColor="#1F0824"
                        CornerRadius="5"/>


                <Label Grid.Row="7"
                       Grid.Column="0"
                       Grid.ColumnSpan="4"
                       Text="o registrate con:"
                       FontAttributes="Italic"
                       VerticalOptions="End"
                       FontSize="13"/>


                <Frame Grid.Row="8"
                       Grid.Column="0"
                       Grid.ColumnSpan="4"
                       HasShadow="False"
                       BorderColor="Black"
                       CornerRadius="0"
                       HeightRequest="40"
                       BackgroundColor="Transparent" 
                       Padding="0"
                       Margin="0,5,0,0">
                    <Grid RowDefinitions="*"
                          ColumnDefinitions="auto,*"
                          HorizontalOptions="Center">
                        <Image Source="google.png"
                               HeightRequest="25"
                               WidthRequest="25"
                               HorizontalOptions="End"
                               Grid.Column="0"/>

                        <Label Text="With Google"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"
                               Grid.Column="1"/>
                    </Grid>
                </Frame>
                <Button Grid.Row="8"
                        Grid.Column="0"
                        Grid.ColumnSpan="4"
                        HorizontalOptions="Fill"
                        Background="Transparent"
                        BorderWidth="0"/>

                <Frame Grid.Row="9"
                       Grid.Column="0"
                       Grid.ColumnSpan="4"
                       HasShadow="False"
                       BorderColor="Black"
                       CornerRadius="0"
                       HeightRequest="40"
                       BackgroundColor="Transparent" 
                       Padding="0"
                       Margin="0,0,0,5">
                    <Grid RowDefinitions="*"
                          ColumnDefinitions="auto,*"
                          HorizontalOptions="Center">
                        <Image Source="facebook.png"
                               HeightRequest="25"
                               WidthRequest="25"
                               HorizontalOptions="End"
                               Grid.Column="0"/>

                        <Label Text="With Facebook"
                               VerticalOptions="Center"
                               HorizontalOptions="Start"
                               Grid.Column="1"/>
                    </Grid>
                </Frame>
                <Button Grid.Row="9"
                        Grid.Column="0"
                        Grid.ColumnSpan="4"
                        HorizontalOptions="Fill"
                        Background="Transparent"
                        BorderWidth="0"/>



            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>